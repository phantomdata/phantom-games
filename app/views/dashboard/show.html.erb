<h1>Dashboard</h1>

<h2>What You've Been Up To</h2>

<h3>Latest Games</h3>

<% @recent_library_entries.each do |library_entry| %>
  <%= library_entry.name %>
  <%= image_tag(game_icon_url(library_entry.game)) %>
  <%= library_entry.playtime_in_hours %> hours
<% end %>

<h3>Favorite Games</h3>

<% @favorite_library_entries.each do |library_entry| %>
  <%= library_entry.name %>
  <%= image_tag(game_icon_url(library_entry.game)) %>
  <%= library_entry.playtime_in_hours %> hours
<% end %>

<!-- Display Top 10 Longest Played Games -->

<h2>What Your Friends are Up To</h2>

<% @watched_steam_profiles.each do |watched_steam_profile| %>
  <h3><%= watched_steam_profile.vanity_name %></h3>

  <h4>Recent Games</h4>
  <% watched_steam_profile.steam_profile.library_entries.recent.each do |le| %>
    <%= le.name %>
    <%= image_tag(game_icon_url(le.game)) %>
    <%= le.playtime_in_hours %> hours
  <% end %>

  <h4>Favorite Games</h4>
  <% watched_steam_profile.steam_profile.library_entries.favorites.each do |le| %>
    <%= le.name %>
    <%= image_tag(game_icon_url(le.game)) %>
    <%= le.playtime_in_hours %> hours

  <% end %>
<% end %>
