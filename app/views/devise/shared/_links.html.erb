<div class="registration-links">
  <%- if controller_name != 'sessions' %>
    Did you want to <%= link_to "Log in", new_session_path(resource_name) %> instead?<br />
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    Do you need to <%= link_to "Sign up", new_registration_path(resource_name) %>?<br />
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    Did you <%= link_to "forget your password?", new_password_path(resource_name) %><br />
  <% end -%>
</div>
